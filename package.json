{
  "name": "backend",
  "scripts": {
    "dev": "wrangler dev src/index.ts --compatibility-flag nodejs_compat --compatibility-date 2024-09-23",
    "deploy": "wrangler deploy --minify --compatibility-flag nodejs_compat --compatibility-date 2024-09-23 src/index.ts",
    "build": "npx wrangler deploy --minify --compatibility-flag nodejs_compat --compatibility-date 2024-09-23 src/index.ts --dry-run --name api --outdir=dist",
