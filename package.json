    "check-types": "tsc --noEmit",
    "format": "prettier --write --check ."
  },
  "dependencies": {
    "@upstash/redis": "^1.34.3",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.2",
    "hono": "^4.6.14",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@eslint/js": "^9.17.0",
    "@types/pg": "^8.11.10",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.18.0",
    "wrangler": "^3.88.0"
  }
}
