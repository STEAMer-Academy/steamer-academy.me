generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model NewsletterSubscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
}

model ContactSubmission {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  message   String
}
